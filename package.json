{
  "name": "@wetrustplatform/wetrust-ui",
  "publishConfig": {
    "access": "public"
  },
  "version": "0.0.3",
  "description": "WeTrust UI Components",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "typings": "esm/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build:cjs": "tsc --module commonjs --target es5 --outDir dist/cjs",
    "build:es2015": "tsc --module es2015 --target es2015 --outDir dist/es2015",
    "build:esm": "tsc --module es2015 --target es5 --outDir dist/esm",
    "build": "yarn build:es2015 && yarn build:esm && yarn build:cjs && yarn package",
    "clean": "rimraf dist",
    "dev": "start-storybook -p 6006",
    "lint": "eslint . --cache --ext js,jsx,ts,tsx",
    "package": "node scripts/packageForPublish",
    "semantic-release": "semantic-release",
    "test": "echo \"no test specified\" && exit 0"
  },
  "contributors": [
    "Vu Hoang Minh (http://github.com/minheq)"
  ],
  "license": "MIT",
  "dependencies": {
    "@truffle/contract": "4.0.36",
    "bn.js": "5.1.1",
    "date-fns": "2.4.1",
    "lodash": "^4.17.15",
    "paramount-ui": "1.86.3",
    "react-use": "13.27.0"
  },
  "devDependencies": {
    "@babel/core": "7.8.7",
    "@babel/plugin-proposal-class-properties": "7.8.3",
